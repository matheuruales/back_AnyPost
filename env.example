# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/railway
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your-database-password

# Azure Blob Storage
AZURE_BLOB_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-account-key;EndpointSuffix=core.windows.net
AZURE_BLOB_CONTAINER_NAME=uploads
AZURE_BLOB_PUBLIC=true

# OpenAI API
OPENAI_API_KEY=sk-proj-your-openai-api-key
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_IMAGES_MODEL=dall-e-3

# JWT Security
APPLICATION_SECURITY_JWT_SECRET=your-very-long-secret-key-for-jwt-token-generation
APPLICATION_SECURITY_JWT_EXPIRATION=3600000

# Mail Configuration (Google SMTP)
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=your-email@gmail.com
SPRING_MAIL_PASSWORD=your-app-password

# External Services
N8N_WEBHOOK_URL=http://your-n8n-instance:5678/webhook/anypost/publish
BLOTATO_API_KEY=your-blotato-api-key
BLOTATO_API_BASE_URL=https://api.blotato.com
BLOTATO_API_TEMPLATE_ID=your-template-id
